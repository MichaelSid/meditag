
<p><%= @user.profile.firstname %></p>
<p><%= @user.profile.lastname %></p>
<p><%= @user.profile.dob %></p>
<p><%= @user.profile.contactnr %></p>
<p><%= @user.profile.address1 %></p>
<p><%= @user.profile.address2 %></p>
<p><%= @user.profile.town %></p>
<p><%= @user.profile.county %></p>
<p><%= @user.profile.country %></p>
<p><%= @user.profile.postcode %></p>
<p><%= @user.profile.gender %></p>


<% @user.medications.each do |med| %>
  <p><%= med.medication %>
  <%= med.dose %></p>
<% end %>

<% @user.conditions.each do |con| %>
  <p><%= con.condition %>
  <%= con.notes %></p>
<% end %>

      <p><%= @user.gpdetail.town %></p>
      <p><%= @user.gpdetail.county %></p>
      <p><%= @user.gpdetail.country %></p>
      <p><%= @user.gpdetail.postcode %></p>
    </div>
  </div>
<% end %>


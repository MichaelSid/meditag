        </tr>
        <tr>
          <td>Contact Number</td>
          <td><%= @user.profile.contactnr %></td>
        </tr>
        <tr>
          <td>Address 1</td>
          <td><%= @user.profile.address1 %></td>
        </tr>
        <tr>
          <td>Address 2</td>
          <td><%= @user.profile.address2 %></td>
        </tr>
        <tr>
          <td>Town</td>
          <td><%= @user.profile.town %></td>
        </tr>
        <tr>
          <td>County</td>
          <td><%= @user.profile.county %></td>
        </tr>
        <tr>
          <td>Country</td>
          <td><%= @user.profile.country %></td>
        </tr>
        <tr>
          <td>Postcode</td>
          <td><%= @user.profile.postcode %></td>
        </tr>
        <tr>
          <td>Gender</td>
          <td><%= @user.profile.gender %></td>
        </tr>
      </table>
    </div>
  </div>
<% end %>


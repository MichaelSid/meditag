<div class="row">
  <div class="col-xs-12 col-md-6 blue">
    <h4>Medication</h4>
    <table>
      <% @user.medications.each do |med| %>
        <% if med.emergency == true %>
          <tr>
          <td><%= med.medication %></td>
          <td><%= med.dose %></td>
          </tr>
        <% end %>
      <% end %>
    </table>
  </div>
</div>

<div class="row">
  <div class="col-xs-12 col-md-6 blue">
    <h4>Condition</h4>
    <table>
      <% @user.conditions.each do |con| %>
        <% if con.emergency == true %>
          <tr>
            <td><%= con.condition %></td>
            <td><%= con.notes %></td>
          </tr>
        <% end %>
      <% end %>
    </table>
  </div>
</div>

<% if @user.gpdetail %>

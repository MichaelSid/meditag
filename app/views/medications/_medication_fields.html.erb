
<fieldset>

  <%= f.text_field :medication, placeholder: "Medication", class: 'form-control medication-field' %> 

  <%= f.text_field :dose, placeholder: "Dose", class: 'form-control dose-field' %> 

  <%= f.check_box :emergency, class: 'emergency-field', data: { toggle: 'tooltip', placement: 'top', title: 'Add to Emergency Profile?' } %>

  

	
  
	<%= f.hidden_field :_destroy %>
  <%= link_to "<span class='glyphicon glyphicon-trash'></span> ".html_safe, '#', class: "remove_fields", rel: 'tooltip', placement: 'top', title: 'Delete' %>

</fieldset>
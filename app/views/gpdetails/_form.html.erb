<%= form_for @gpdetail, html: { role: 'form' }, url: gpdetail_path do |f| %>

<div class="form-group"> 
  <%= f.text_field :firstname, required: true, placeholder: 'Firstname', class: 'form-control' %> 
</div>
<div class="form-group">
  <%= f.text_field :lastname, required: true, class: 'form-control', placeholder: 'Lastname' %> 
</div>

<div class="form-group">
  <%= f.text_field :faxnumber, class: 'form-control', placeholder: 'Fax Number' %> 
</div>

<div class="form-group">
  <%= f.text_field :contactnr, required: true, class: 'form-control', placeholder: 'Contact Number' %> 
</div>

<div class="form-group">
  <%= f.text_field :address1, class: 'form-control', placeholder: 'Address Line 1' %> 
</div>

<div class="form-group">
  <%= f.text_field :address2, class: 'form-control', placeholder: 'Address Line 2' %> 
</div>

<div class="form-group">
  <%= f.text_field :town, required: true, class: 'form-control', placeholder: 'Town' %> 
</div>

<div class="form-group">
  <%= f.text_field :county, class: 'form-control', placeholder: 'County' %> 
</div>

<div class="form-group">
      <%= f.select :country, countries, :prompt => 'Select Country',required: true, placeholder: 'Country', class: 'form-control' %>
</div>

<div class="form-group">
  <%= f.text_field :postcode, class: 'form-control', placeholder: 'Postcode' %> 
</div>

<div class="form-group">
   <%= f.submit 'Update', class: 'btn btn-success' %> 
</div>
<%end%>






